			  <field name="account_debit_operativa" options="{'no_create': True}"/>
			  <field name="account_credit_operativa" options="{'no_create': True}"/>
			  <field name="debit_partner" options="{'no_create': True}"/>
			  <field name="credit_partner" options="{'no_create': True}"/>
      </field>
    </field>
  </record>

</odoo>
