<!--
 Campos del formato XML
 -->

<!--  vista Campos del formato    -->

<record model="ir.ui.view" id="account_campos_formato_tree_view">
    <field name="name">account.campos.formato.tree</field>
    <field name="model">account.campos.formato</field>
    <field name="arch" type="xml">
        <tree string="Campos del formato">
           <field name="sequence"/>
           <field name="name"/>
           <field name="referencia"/>
           <field name="tipo_id"/>
           <field name="tipo_valor_id"/>
        </tree>
    </field>
</record>

<record model="ir.ui.view" id="account_campos_formato_form_view">
    <field name="name">account.campos.formato.form</field>
    <field name="model">account.campos.formato</field>
    <field name="arch" type="xml">
        <form string="Campos del formato">
            <group>
                <field name="sequence"/>
                <field name="name"/>
                <field name="referencia"/>
                <field name="tipo_id"/>
                <field name="tipo_valor_id"/>                
                <field name="conceptos_ids">
                    <tree string = "Conceptos relacionados" editable = "bottom">
                        <field name="concepto_id"/>                        
                        <field name="concepto_rel_id"/>                        
                    </tree>
                </field>                                
            </group>
        </form>
    </field>
</record>

        <!--  vista Formatos DIAN    -->
        
    <record model="ir.ui.view" id="account_forms_dian_form_tree_view">
			<field name="name">account.formato.dian.form.tree</field>
			<field name="model">account.formato.dian</field>
			<field name="arch" type="xml">			
				<tree string="Formatos">
					<field name="code"/>
					<field name="name"/>
                    <field name="ejemplo"/>
                    <field name="explicacion"/>

				</tree>			
			</field>
	</record>  

    <record model="ir.ui.view" id="account_forms_dian_form_view">
			<field name="name">account.formato.dian.form</field>
			<field name="model">account.formato.dian</field>
			<field name="arch" type="xml">			
				<form string="Formatos">
                    <group>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="version"/>
                    </group>
                    <group>
                        <field name="campos_ids"/>
                    </group>
                    <group>
                        <field name="ejemplo"/>
                        <field name="explicacion"/>
                    </group>                    
				</form>		
			</field>
	</record>   

    <record id="account_forms_dian_list_action" model="ir.actions.act_window">
			 <field name="name">Formatos</field>
			 <field name="res_model">account.formato.dian</field>
			 <field name="view_type">form</field>
			 <field name="view_mode">tree,form</field>
	</record>

	<menuitem id="account_forms_dian" 
              name="Formatos"
              parent="account_exagenous_menu" 
              action="account_forms_dian_list_action"/>

<!--  vista conceptos DIAN    -->

<record model="ir.ui.view" id="account_conceptos_tree_view">
    <field name="name">account.conceptos.form.tree</field>
    <field name="model">account.conceptos</field>
    <field name="arch" type="xml">
        <tree string="Formatos DIAN">
            <field name="code"/>
            <field name="name"/>
            <field name="porcentaje_no_deducible"/>
            <field name="tope"/>
            <field name="form_dian_id"/>            
        </tree>
    </field>
</record>

<record model="ir.ui.view" id="account_conceptos_form_view">
    <field name="name">account.conceptos.form</field>
    <field name="model">account.conceptos</field>
    <field name="arch" type="xml">
        <form string="Formatos">
            <group>
                <field name="code"/>
                <field name="name"/>
                <field name="porcentaje_no_deducible"/>
                <field name="tope"/>
                <field name="form_dian_id"/>
                <field name="cuentas_ids">
                    <tree string = "Cuentas" editable = "bottom">
                        <field name="cuenta_id" domain="[('type','!=','view')]"/>                        
                    </tree>
                </field>                
            </group>
        </form>
    </field>
</record>


    <record id="account_conceptos_list_action" model="ir.actions.act_window">
			 <field name="name">Conceptos</field>
             <field name="res_model">account.conceptos</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="account_conceptos" 
              name="Conceptos"
              parent="account_exagenous_menu" 
              action="account_conceptos_list_action"/>

		<!--
            Herencia partner para incluir campo tipo de identificación y actividad economica
        -->        
               
        <record model="ir.ui.view" id="view_partner_form_inherit">
			<field name="name">account.exogenous.partner.form.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<field name="street" position="after">							
					<field name="activity_economic_id"/>				
			    </field>		
			</field>		
		</record>  


        <record model="ir.ui.view" id="view_country_form_inherit">
			<field name="name">account.exogenous.country.form.inherit</field>
			<field name="model">res.country</field>
			<field name="inherit_id" ref="base.view_country_form"/>
			<field name="arch" type="xml">
				<field name="code" position="after">							
					<field name="code_dian"/>				
			    </field>			
			</field>													
		</record>
        		 
	
</odoo>
