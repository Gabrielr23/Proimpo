<odoo>
  <data>
    <record id="account_state_file_payment_view_form" model="ir.ui.view">
      <field name="name">account_state_file_payment_view_form</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <!-- <field name="groups_id" eval="[(6,0,[ref('group_enable_pay')])]"/> -->
      <field name="arch" type="xml">
        <xpath expr="//field[@name='ref']" position="after">
          <field name="file_status" readonly="True"/>
          <field name="bank" readonly="True"/>
        </xpath>
      </field>
    </record>

    <record id="account_state_file_payment_view_form_change" model="ir.ui.view">
      <field name="name">account_state_file_payment_view_form_change</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="groups_id" eval="[(6,0,[ref('group_enable_pay')])]"/>
      <field name="arch" type="xml">
        <field name="file_status" position="attributes">
			    <attribute name="readonly">False</attribute>
		    </field>
        <field name="bank" position="attributes">
			    <attribute name="readonly">False</attribute>
		    </field>
      </field>
    </record>

    <record id="account_state_file_payment_view_tree" model="ir.ui.view">
      <field name="name">account_state_file_payment_view_tree</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_tree"/>
      <!-- <field name="groups_id" eval="[(6,0,[ref('account_payment_schedule.group_check_pagos')])]"/> -->
      <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="after">
          <field name="file_status" widget="badge" decoration-info="file_status == 'no_generado'"  decoration-success="file_status == 'generado'"/>
          <field name="bank" widget="badge" decoration-info="bank == 'otros'" decoration-success="bank == 'bancolombia'" />
        </xpath>
      </field>
    </record>

  </data>
</odoo>    