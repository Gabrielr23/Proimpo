<?xml version="1.0" ?>
  <odoo>
    <data>
      <record id="generate_bank_file_wizard_view" model="ir.ui.view">
        <field name="name">generate.bank.file.wizard.form</field>
        <field name="model">payment.export.wizard</field>
        <field name="arch" type="xml">
          <form string="Generar plano para banco">
            <group>
              <field name="date_payment" required="1"/>
              <field name="date_application" required="1"/>
              <field name="journal_id" required="1" 
                                       domain="[('type', '=', 'bank')]" 
                                       context="{'default_type':'bank'}"
                                       options="{'no_create': True, 'no_open': True}"/>
               <field name="transaccion" required="1"/>
               <field name="descripcion" required="1"/>
               <field name="sequence" required="1" placeholder="No puede enviarse la misma secuencia un mismo dia Ej. A1,A2..."/>                        
            </group>
            <footer>
              <button string="Generar" name="export_txt" type="object" class="oe_highlight"/>
              <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
          </form>
        </field>
      </record>

      <record id="generate_bank_file_wizard_action" model="ir.actions.server">
        <field name="name">Generar Archivo Banco</field>
        <field name="model_id" ref="generate_bank_file.model_payment_export_wizard"/>
        <field name="binding_model_id" ref="account.model_account_payment" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.open_wizard()</field>
      </record>

      
      
      
