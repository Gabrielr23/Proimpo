<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="my_credit_limit_confirm_wizard">
        <field name="name">Confirmación orden de venta</field>
        <field name="model">sale.control.limit.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml"> 
            <form>
                <group>
                    <span>El cliente presenta un crédito excedido o con factura vencida. Esta orden de venta requiere una aprobación previa o aumentar su cupo de crédito</span>
                </group>
		<group>
			<field name="debt" widget="monetary"/>
			<field name="invoice_amount" widget="monetary"/>
			<field name="due_not_invoiced" widget="monetary"/>
			<field name="new_balance" widget="monetary"/>
			<field name="my_credit_limit" widget="monetary"/>
			<field name="balance_due" widget="monetary"/>
		</group> 
                <footer> 
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
		    <button name="exceed_limit_approve" string="Aprobar" type="object" class="oe_highlight" />                 
                </footer>
            </form>
        </field>
    </record>
</odoo>

